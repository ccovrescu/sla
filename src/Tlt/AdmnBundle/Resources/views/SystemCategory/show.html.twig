{% extends '::base.html.twig' %}

{% block page %}
    <h1>SystemCategory</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id}} </td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ entity.department }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-group">
        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_systemcategory_index') }}">
            Inapoi la lista
        </a>
    </li>
    <li>
        <a href="{{ path('admin_systemcategory_edit', { 'id': entity.id }) }}">
            Editare
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
</div>
{% endblock %}
