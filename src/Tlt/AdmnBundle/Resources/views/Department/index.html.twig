{% extends '::base.html.twig' %}

{% block page %}
        <div class="row">
          <div class="col-lg-12">
            <h1>Departamente <small>Index</small></h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('admin_departments_index') }}"><i class="icon-dashboard"></i> Departamente</a></li>
              <li class="active"><i class="icon-file-alt"></i> Index</li>
            </ol>
          </div>
        </div><!-- /.row -->

		
		<div class="row">
          <div class="col-lg-8 text-left">
                <h2>Lista departamente</h2>
          </div>
          <div class="col-lg-4 text-right">
              <div class="panel-body">
                <button type="submit" class="btn btn-primary" onclick="location.href='{{ path('admin_departments_add') }}'">Adauga departament</button>
              </div>
          </div>
        </div><!-- /.row -->


           <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped tablesorter">
				<thead>
					<tr>
						<th>Denumire <i class="fa fa-sort"></i></th>
						<th class="text-right">Optiuni</th>
					</tr>
               </thead>
               <tbody>
					{% if departments %}
						{% for department in departments %}
							<tr>
								<td>{{ department.name }}</td>
								<td class="text-right"><a href="{{ path('admin_departments_edit', {'id' : department.id}) }}">modifica</a></td>
							</tr>
						{% endfor %}
					{% endif %}
               </tbody>
			   <tfoot>
					<tr>
						<th colspan="2" class="text-center">Total {{ departments|length }} departamente.</th>
					</tr>
			   </tfoot>
            </table>
        </div>

{% endblock  %}

{% block javascripts %}
	{{ parent() }}
		
	<!-- Page Specific Plugins -->
	<script src="{{ asset('js/tablesorter/jquery.tablesorter.js') }}"></script>
	<script src="{{ asset('js/tablesorter/tables.js') }}"></script>
{% endblock %}