{% extends '::base.html.twig' %}

{% block page %}
        <div class="row">
          <div class="col-lg-12">
            <h1>Entitati beneficiare<small>Editare</small></h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('admin_owners_index') }}"><i class="icon-dashboard"></i> Entitati</a></li>
              <li class="active"><i class="icon-file-alt"></i> Editare</li>
            </ol>
          </div>
        </div><!-- /.row -->

		{{ form_start(form) }}
			<div class="form-group">
				{{ form_label(form.name) }}
				{{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder':'introduceti denumirea'}}) }}
			</div>
            <div class="form-group">
                {{ form_label(form.reportsOwner) }}
                {{ form_widget(form.reportsOwner, {'attr': {'class': 'form-control', 'placeholder':'introduceti denumirea care apare in rapoarte'}}) }}
            </div>

			{{ form_widget(form.salveaza, {'attr': {'class': 'btn btn-primary'}}) }}
			{{ form_widget(form.reseteaza, {'attr': {'class': 'btn btn-default'}}) }}
			
			{{ form_rest(form) }}
		{{ form_end(form) }}
{% endblock %}