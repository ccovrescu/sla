{% extends '::base.html.twig' %}

{% block page %}
        <div class="row">
          <div class="col-lg-12">
            <h1>Sisteme <small>Index</small></h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('homepage') }}"><i class="icon-dashboard"></i> Prima pagina</a></li>
              <li class="active"><i class="icon-file-alt"></i> Sisteme</li>
            </ol>
          </div>
        </div><!-- /.row -->
		
        <div class="row">
          <div class="col-lg-12">
            <div class="bs-example">
              <div class="jumbotron">
			  
		{{ form_start(form) }}
			<div class="form-group">
				{{ form_label(form.department) }}
				{{ form_widget(form.department, {'attr': {'class': 'form-control', 'placeholder':'introduceti denumirea'}}) }}
			</div>
			
			{{ form_widget(form.Arata, {'attr': {'class': 'btn btn-primary'}}) }}
			
			{{ form_rest(form) }}
		{{ form_end(form) }}
		
              </div>
            </div>
          </div>
        </div><!-- /.row -->
		

		
		<div class="row">
          <div class="col-lg-8 text-left">
                <h2>Lista sistemelor</h2>
          </div>
          <div class="col-lg-4 text-right">
              <div class="panel-body">
                <button type="submit" class="btn btn-primary" onclick="location.href='{{ path('admin_systems_add') }}'">Adauga sistem</button>
              </div>
          </div>
        </div><!-- /.row -->		
		

           <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped tablesorter">
				<thead>
					<tr>
						<th rowspan="2">Denumire <i class="fa fa-sort"></i></th>
                        <th colspan="2" class="text-center" nowrap>Program disponibilitate</th>
						<th rowspan="2" class="text-right">Disponibilitate garantata <i class="fa fa-sort"></i></th>
						<th rowspan="2" class="text-right">Optiuni</th>
					</tr>
                    <tr>
                        <th class="text-right">Start</th>
                        <th class="text-right">Sfarsit</th>
                    </tr>
               </thead>
               <tbody>
					{% if systems %}
						{% for system in systems %}
							<tr>
								<td><a href="{{ path('admin_systems_details', {'id': system.id}) }}">{{ system.name }}</a></td>
                                <td class="text-right">
                                    {% if system.guaranteedValues is defined and system.guaranteedValues is not null %}
                                        {{ system.guaranteedValues.first.minHour|date('H:i:s') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td class="text-right">
                                    {% if system.guaranteedValues is defined and system.guaranteedValues is not null %}
                                        {{ system.guaranteedValues.first.maxHour|date('H:i:s') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td class="text-right">
                                    {% if system.guaranteedValues is defined and system.guaranteedValues is not null %}
									    {{ system.guaranteedValues.first.value|number_format(2, '.', ',') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
								<td class="text-right"><a href="{{ path('admin_systems_edit', {'id' : system.id}) }}">modifica</a></td>
							</tr>
						{% endfor %}
					{% endif %}
               </tbody>
			   <tfoot>
					<tr>
						<th colspan="5" class="text-center">Total {{ systems|length }} sisteme.</th>
					</tr>
			   </tfoot>
            </table>
        </div>

{% endblock  %}

{% block javascripts %}
	{{ parent() }}
		
	<!-- Page Specific Plugins -->
	<script src="{{ asset('js/tablesorter/jquery.tablesorter.js') }}"></script>
	<script src="{{ asset('js/tablesorter/tables.js') }}"></script>
{% endblock %}