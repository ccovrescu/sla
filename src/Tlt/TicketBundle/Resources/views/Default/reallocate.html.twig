{% extends '::base.html.twig' %}

{% block page %}
        <div class="row">
          <div class="col-lg-12">
            <h1>Tichet {{ticket.id}} <small>Realocare</small></h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('tickets') }}"><i class="icon-dashboard"></i> Tichet {{ticket.id}}</a></li>
              <li class="active"><i class="icon-file-alt"></i> Realocare</li>
            </ol>
          </div>
        </div><!-- /.row -->

		{{ form_start(form, {'attr': {'class':'breadcrumb'}}) }}
            {{ form_errors(form) }}

        <div class="row">
            <div class="col-lg-6">
                <fieldset disabled>
                    <div class="form-group">
                        <label for="disabledSelect">Vechea optiune:</label>
                        <select id="disabledSelect" class="form-control">
                            <option>{{ticket.ticketAllocations.first.branch}}</option>
                        </select>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_label(form.branch) }}
                    {{ form_widget(form.branch, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>


			{{ form_widget(form.salveaza, {'attr': {'class': 'btn btn-primary'}}) }}
			{{ form_widget(form.reseteaza, {'attr': {'class': 'btn btn-default'}}) }}
			
			{{ form_rest(form) }}
		{{ form_end(form) }}
{% endblock %}

