{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/sla-table-row.css' ) }}" rel="stylesheet">
{% endblock %}

{% block page %}
    <div class="row">
        <div class="col-lg-12">
            <h1>Tichete <small>Index</small></h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('tickets') }}"><i class="icon-dashboard"></i> Tichete</a></li>
                <li class="active"><i class="icon-file-alt"></i> Index</li>
            </ol>
        </div>
    </div><!-- /.row -->


    {{ form_start(form, {'attr': {'class':'breadcrumb'} }) }}
    <div class="row no-print">
        <div class="col-lg-3">
            <div class="form-group">
                {{ form_label(form.service_type) }}

                {% for option in form.service_type %}
                    <div class="checkbox">
                        {#{ form_label(option) }#}
                        <label>{{ form_widget(option) }} {{ option.vars.label }} </label>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                {{ form_label(form.search) }}
                {{ form_widget(form.search, {'attr': {'class': 'form-control', 'placeholder':'Numar / Anuntat de'}}) }}
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                {{ form_label(form.isReal) }}

                {% for option in form.isReal %}
                    <div class="checkbox">
                        <label>{{ form_widget(option) }} {{ option.vars.label }} </label>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-lg-6">
            <div class="text-right">
                <div class="form-group">
                    <br/>
                    {{ form_widget(form.Arata, { 'label': 'Filtreaza', 'attr': {'class': 'btn btn-primary' }}) }}
                </div>
            </div>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}

    <div class="row">
        <div class="col-lg-8 text-left">
            <h2>Lista tichete</h2>
        </div>
        <div class="col-lg-4 text-right">
            <div class="panel-body">
               {# <button type="submit" class="btn btn-success" onclick="location.href='{{ path('add_ticket') }}'"  disabled>Adauga tichet</button> #}
                <button type="submit" class="btn btn-success" onclick="location.href='{{ path('add_ticket') }}'" {% if not is_granted('ROLE_TICKET_INSERT') %} disabled {% endif %}>Adauga tichet</button>
				</div>
        </div>
    </div><!-- /.row -->


    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                {% set params = pagination.getParams() %}
                {% set direction = params['direction'] is defined ? params['direction'] : null %}
                <tr>
                    <th nowrap>{{ knp_pagination_sortable(pagination, 'Nr', 't.id') }} {% if pagination.isSorted('t.id') %} <i class="fa fa-sort-{{ direction }}"></i>{% endif %}</th>
                    <th nowrap>Tip serviciu</th>
                    <th nowrap>{{ knp_pagination_sortable(pagination, 'Anuntat de', 't.announcedBy') }} {% if pagination.isSorted('t.announcedBy') %} <i class="fa fa-sort-{{ direction }}"></i>{% endif %}</th>
                    <th nowrap>{{ knp_pagination_sortable(pagination, 'Anuntat la', 't.announcedAt') }} {% if pagination.isSorted('t.announcedAt') %} <i class="fa fa-sort-{{ direction }}"></i>{% endif %}</th>
                    <th nowrap>Rezolvat la</th>
                    <th class="text-left">Descriere</th>
                    <th class="text-left">Optiuni</th>
                </tr>
            </thead>
            <tbody>
            {% if pagination %}
                {% for ticket in pagination %}
                    <tr
                            {% if ticket.isReal is defined and ticket.isReal is null %}
                                class="warning"
                            {% elseif ticket.isReal is defined and ticket.isReal == 0 %}
                                class="gray"
                            {% elseif ticket.isClosed is defined and ticket.isClosed == 1 %}
                                class="success"
                            {% endif %}
                            >

                        <td>{{ ticket.id }}</td>
                        <td>
                            {% if ticket.department is defined and ticket.department is not null %}
                                {% if ticket.department == "1" %}
                                    IP
                                {% elseif ticket.department == "2" %}
                                    TC
                                {% elseif ticket.department == "3" %}
                                    TI
                                {% elseif ticket.department == "4" %}
                                    SCL CONT
                                {% elseif ticket.department == "5" %}
                                    SCL TC
                                {% elseif ticket.department == "6" %}
                                    SCL TI
								{% elseif ticket.department == "7" %}
                                    MMS TC
                                {% elseif ticket.department == "8" %}
                                    MMS TI
                                {% endif %}
                            {% else %}
                                <samp><abbr title="attribute">n/a</abbr></samp>
                            {% endif %}
                        </td>
                        <td>{{ ticket.announcedBy }}</td>
                        <td nowrap>{{ ticket.announcedAt|date('d-m-Y H:i') }}</td>
                        <td nowrap>
                            {% if ticket.fixedAt is defined and ticket.fixedAt is not null %}
                                {{ ticket.fixedAt|date('d-m-Y H:i') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td class="text-left">
                            <a href="{{ path('ticket_details', {'id' : ticket.id}) }}">
                                {{ticket.description}}
                            </a>
                        </td>
                        <td>
                            <div class="btn-group" style="min-width: 90px">
                                <button type="button" class="btn btn-default">alege</button>
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('ticket_details', {'id' : ticket.id}) }}">Detalii</a></li>
                                    {% if ticket.isReal is null and is_granted('ROLE_TICKET_INSERT') %}
                                        <li class="divider"></li>
                                        <li><a href="{{ path('reallocate_ticket', {'id' : ticket.id}) }}">Realocare</a></li>
                                    {% endif %}
                                </ul>
                            </div><!-- /btn-group -->
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
            <tfoot>
            <tr>
                <th colspan="7" class="text-center">Total {{ pagination.getTotalItemCount }} tichete</th>
            </tr>
            </tfoot>
        </table>
    </div>

    {# display navigation #}
    {% do pagination.setTemplate('::pagination.html.twig') %}
    {{ knp_pagination_render(pagination) }}

{% endblock  %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}