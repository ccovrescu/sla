{% extends '::base.html.twig' %}

{% block page %}
        <div class="row">
          <div class="col-lg-12">
            <h1>Tichet {{form.vars.value.ticketEquipment.ticketCreate.id}}<small>Adaugare sistem</small></h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('ticket_details', {'id' : form.vars.value.ticketEquipment.ticketCreate.id}) }}"><i class="icon-dashboard"></i> Tichet {{form.vars.value.ticketEquipment.ticketCreate.id}}</a></li>
              <li class="active"><i class="icon-file-alt"></i> Adaugare sistem pentru: <strong>{{ticketEquipment.equipment.name}}</strong></li>
            </ol>
          </div>
        </div><!-- /.row -->

		{{ form_start(form) }}
			<div class="form-group">
				{{ form_label(form.system) }}
				{{ form_widget(form.system, {'attr': {'class': 'form-control'}}) }}
			</div>
			
			{{ form_widget(form.salveaza, {'attr': {'class': 'btn btn-primary'}}) }}
			{{ form_widget(form.reseteaza, {'attr': {'class': 'btn btn-default'}}) }}
			
			{{ form_rest(form) }}
		{{ form_end(form) }}
{% endblock %}

