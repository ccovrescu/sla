{% extends '::base.html.twig' %}

{% block page %}

        <div class="row">
          <div class="col-lg-12">
            <h1>Sisteme <small>Confirmare</small></h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('tlt_admn_systems_homepage') }}"><i class="icon-dashboard"></i> Sisteme</a></li>
              <li class="active"><i class="icon-file-alt"></i> Editare</li>
            </ol>
          </div>
        </div><!-- /.row -->
		
		
        <div class="alert alert-dismissable alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
			
			{% if action == 'add' %}
				Actiunea de <strong>salvare</strong> s-a incheiat cu <strong>succes</strong>. <a href="{{ path('tlt_admn_systems_add') }}" class="alert-link">[ Adaugati ]</a> un nou sistem sau reveniti la lista <a href="{{ path('tlt_admn_systems_homepage') }}"  class="alert-link">[ sistemelor ]</a>.
			{% else %}
				Actiunea de <strong>editare</strong> s-a incheiat cu <strong>succes</strong>. Reveniti la lista <a href="{{ path('tlt_admn_systems_homepage') }}"  class="alert-link">[ sistemelor ]</a>.
			{% endif %}
        </div>

{% endblock %}