{% extends '::base.html.twig' %}

{% block page %}
        <div class="row">
          <div class="col-lg-12">
            <h1>Mapari [{{equipment.name}}] <small>Index</small></h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('tlt_admn_mappings_homepage', {'equipment_id' : equipment.id}) }}"><i class="icon-dashboard"></i> Mapari</a></li>
              <li class="active"><i class="icon-file-alt"></i> Index</li>
            </ol>
          </div>
        </div><!-- /.row -->

		
		<div class="row">
          <div class="col-lg-8 text-left">
                <h2>Lista maparilor</h2>
          </div>
          <div class="col-lg-4 text-right">
              <div class="panel-body">
                <button type="submit" class="btn btn-primary" onclick="location.href='{{ path('tlt_admn_mappings_add', {'equipment_id':equipment.id}) }}'">Adauga mapare</button>
              </div>
          </div>
        </div><!-- /.row -->


           <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped tablesorter">
				<thead>
					<tr>
						<th>Sistem <i class="fa fa-sort"></i></th>
						<th colspan="2" class="text-center">Optiuni</th>
					</tr>
               </thead>
               <tbody>
					{% if mappings %}
						{% for mapping in mappings %}
							<tr>
								<td>{{ mapping.getSystem.name }}</td>
								<td class="text-right"><a href="{{ path('tlt_admn_mappings_edit', {'mapping_id' : mapping.id}) }}">modifica</a></td>
								<td><a href="{{ path('tlt_admn_mappings_delete', {'mapping_id' : mapping.id}) }}" onclick="return confirm('Sunteti sigur? Inregistrarea nu va putea fi recuperata!!!');">sterge</a></td>
							</tr>
						{% endfor %}
					{% endif %}
               </tbody>
			   <tfoot>
					<tr>
						<th colspan="3" class="text-center">Total {{ mappings|length }} mapari.</th>
					</tr>
			   </tfoot>
            </table>
        </div>

{% endblock  %}

{% block javascripts %}
	{{ parent() }}
		
	<!-- Page Specific Plugins -->
	<script src="{{ asset('js/tablesorter/jquery.tablesorter.js') }}"></script>
	<script src="{{ asset('js/tablesorter/tables.js') }}"></script>
{% endblock %}