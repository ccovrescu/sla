<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Teletrans - SLA</title>

    {% block stylesheets %}
        <link rel="stylesheet"
              href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css"/>

        <!-- Bootstrap core CSS -->
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">

        <!-- Add custom CSS here -->
        <link href="{{ asset('css/sb-admin.css' ) }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('font-awesome/css/font-awesome.min.css') }}">
    {% endblock %}
</head>

<body>

<div id="wrapper">

    <!-- Sidebar -->
    <nav class="navbar navbar-inverse navbar-fixed-top no-print" role="navigation">

        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('homepage') }}">Aplicatie SLA</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav side-nav">
                <li><a href="{{ path('tickets') }}"><i class="fa fa-desktop"></i> Tichete</a></li>

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="dropdown">
                        <a href="{{ path('homepage') }}" class="dropdown-toggle" data-toggle="dropdown"><i
                                    class="fa fa-bar-chart-o"></i> Disponibilitate <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <!--<li><a href="{{ path('services_disponibility') }}"><i class="fa fa-bar-chart-o"></i> Servicii</a></li>-->
                            <li><a href="{{ path('main_bundle_systems_disponibility') }}"><i class="fa fa-bar-chart-o"></i> Sisteme
                                    - toate</a></li>
                            <li><a href="{{ path('systems_by_service') }}"><i class="fa fa-bar-chart-o"></i> Sisteme -
                                    per serviciu </a></li>
                        </ul>
                    </li>
                {% endif %}

                <li><a href="{{ path('anexa') }}"><i class="fa fa-table"></i> Anexa A</a></li>

                {% if is_granted('ROLE_ALLOWED_TO_EDIT_EQUIPMENTS') %}
                    <li class="dropdown">
                        <a href="{{ path('admin_index') }}" class="dropdown-toggle" data-toggle="dropdown"><i
                                    class="fa fa-caret-square-o-down"></i> Administrare <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('admin_owners_index') }}">Entitati (owners)</a></li>
                            <li><a href="{{ path('admin_branches_index') }}">Agentii/Centre</a></li>
                            <li><a href="{{ path('admin_locations_index') }}">Locatii generale</a></li>
                            <li><a href="{{ path('admin_zone_locations_index') }}">Locatii in agentie/centru</a></li>
                            <li><a href="{{ path('admin_departments_index') }}">Departamente</a></li>
                            <li><a href="{{ path('admin_services_index') }}">Echipamente/Utilizatori</a></li>
                            <li><a href="{{ path('admin_properties_index') }}">Proprietati</a></li>
                            <li><a href="{{ path('admin_equipments_index') }}">Echipamente</a></li>
                            <li><a href="{{ path('admin_systems_index') }}">Sisteme</a></li>
                            <li><a href="{{ path('admin_sts_index') }}">Mapari sisteme pe servicii</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('profile_user_index') }}">Utilizatori</a></li>
                            {% endif %}
                        </ul>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ALLOWED_TO_EDIT_EQUIPMENTS') %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i
                                class="fa fa-caret-square-o-down"></i> Rapoarte <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('reports_journal') }}">Jurnal tichete</a></li>
                    </ul>
                </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <!--<li><a href="{{ path('sla') }}"><i class="fa fa-edit"></i> SLA</a></li>-->
                    <li><a href="{{ path('sla_by_sys') }}"><i class="fa fa-edit"></i> SLA - Sisteme</a></li>
                    <li><a href="{{ path('slax') }}"><i class="fa fa-edit"></i> SLA - final</a></li>
                {% endif %}
            </ul>

            <ul class="nav navbar-nav navbar-right navbar-user">
                <li class="dropdown user-dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i
                                class="fa fa-user"></i> {{ app.user.firstname ~ ' ' ~ app.user.lastname }} <b
                                class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('profile_user_details') }}"><i class="fa fa-user"></i> Profil
                                utilizator</a></li>
                        <li><a href="{{ path('profile_user_chpwd') }}"><i class="fa fa-gear"></i> Schimbare parola</a>
                        </li>
                        <li class="divider"></li>
                        <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> Log Out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </nav>

    <div id="page-wrapper">
        {% block page %}
        {% endblock %}
    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<!-- JavaScript -->
{% block javascripts %}
    <script src="{{ asset('js/jquery-1.10.2.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
{% endblock %}

</body>
</html>